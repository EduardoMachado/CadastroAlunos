@model  IEnumerable<CadastroAlunos.Models.Aluno>
@{
    ViewBag.Title = "Lista";
}


<div class="jumbotron">
	<div style="margin-left:1250px; padding-top:0px">@Html.ActionLink("Sair", "LogOn", null, new { @class = "btn btn-primary" })</div>
	<h1>Cadastro de Alunos</h1>
	<p></p>
	<p>@Html.ActionLink("Cadastrar aluno", "Cadastrar", null, new { @class = "btn btn-primary" })</p>

</div>

<div class="row" style="margin-top: 50px; margin-left: 10px">
    <div class="col-sm-10">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ra)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Semestre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Periodo)
                    </th>
                    <th>
                        @*@Html.Label("Detalhes")*@
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semestre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Periodo)
                        </td>
                        <td>
                                                     
                            @Html.ActionLink("Detalhes", "Detalhes",new {id = item.Id}, new { @class = "btn btn-success btn-xs" })
                            @Html.ActionLink("Editar", "Editar",new {id = item.Id}, new { @class = "btn btn-info btn-xs" })
                            @Html.ActionLink("Excluir", "Excluir",new {id = item.Id}, new { @class = "btn btn-warning btn-xs" })
                            
                        </td>
                    </tr>
         
                }
            </tbody>
        </table>
    </div>
</div>








